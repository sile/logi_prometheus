%% -*- erlang -*-
{erl_opts,
 [
  warnings_as_errors,
  warn_export_all,
  warn_untyped_record,
  debug_info
 ]}.

{xref_checks,
 [
  fail_on_warning,
  undefined_function_calls
 ]}.

{cover_enabled, true}.

{edoc_opts,
 [
  {dialyzer_specs, all},
  {report_missing_type, true},
  {report_type_mismatch, true},
  {pretty_print, erl_pp},
  {preprocess, true}
 ]}.
{validate_app_modules, true}.

{shell, [{apps, [logi_prometheus]}]}.
{dialyzer,
 [
  {warnings, [error_handling, race_conditions, unmatched_returns, unknown, no_improper_lists]}
 ]}.

{deps,
 [
  {logi, ".*", {git, "https://github.com/sile/logi.git", {tag, "v0.0.12"}}},
  {prometheus, ".*", {git, "https://github.com/deadtrickster/prometheus.erl.git", {tag, "v3.4.6"}}}
 ]}.

{profiles,
 [
  {test,
   [
    %% FIXME: Uncomment the below line when rebar_covertool-v1.3.0 is released
    %% {plugins, [rebar_covertool]}
    {plugins, [{rebar_covertool, {git, "https://github.com/covertool/covertool.git", {branch, "master"}}}]}
   ]}
 ]}.
